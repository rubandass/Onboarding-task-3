<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sales</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

</head>
<body>
    <div class="container">
        <br />
        <a href="#" class="btn btn-info" data-bind="click: addSaleModal">Add New Sale</a>
        <br />
        <br />

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Sale Id</th>
                    <th>Customer Name</th>
                    <th>Product Name</th>
                    <th>Store Name</th>
                    <th>Date (MM/DD/YYYY)</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody data-bind="foreach: sales">
                <tr>
                    <td data-bind="text: Id"></td>
                    <td data-bind="text: Customer"></td>
                    <td data-bind="text: Product"></td>
                    <td data-bind="text: Store"></td>
                    <td data-bind="text: DateSold"></td>
                    <td>
                        <a href="#" class="btn btn-warning" data-bind="click: $root.editSaleModal"><span class="glyphicon glyphicon-edit"></span> Edit</a>
                    </td>
                    <td>
                        <a href="#" class="btn btn-danger" data-bind="click: $root.deleteSaleModal"><span class="glyphicon glyphicon-trash"></span> Delete</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>


    <div class="modal fade" data-keyboard="false" data-backdrop="static" id="saleModal">
        <fieldset>
            <div class="modal-dialog" data-bind="with : selectedSale">
                <div class="modal-content">
                    <div class="modal-header">
                        <a href="#" class="close" data-dismiss="modal">&times;</a>
                        <h4 id="modalTitle"></h4>
                    </div>
                    <div class="modal-body">
                        <form id="saleForm" class="form-horizontal">
                            <div class="form-group">
                                <input class="form-control" type="text" data-bind="value : Id ,visible : $parent.hideId" />
                                <label class="control-label col-sm-3">Customer Name</label>
                                <select class="form-control col-sm-9" data-bind="
                                        options: $parent.availableCustomers,
                                        optionsText: function (customer) {
                                                    return customer.Name
                                                    },
                                        optionsValue: 'Id',
                                        value: $data.CustomerId,
                                        optionsCaption: '--Select Customer--'"></select>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-3">Product Name</label>
                                <select class="form-control col-sm-9" data-bind="
                                        options: $parent.availableProducts,
                                        optionsText: function (product) {
                                                    return product.Name
                                                    },
                                        optionsValue: 'Id',
                                        value: $data.ProductId,
                                        optionsCaption: '--Select Product--'"></select>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-3">Store Name</label>
                                <select class="form-control col-sm-9" data-bind="
                                        options: $parent.availableStores,
                                        optionsText: function (store) {
                                                    return store.Name
                                                    },
                                        optionsValue: 'Id',
                                        value: $data.StoreId,
                                        optionsCaption: '--Select Store--'"></select>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-3">Date Sold</label>
                                <input id="dateInput" type="date" class="form-control col-sm-3" data-bind="value: DateSold" />
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" id="btnAdd" class="btn btn-success" data-dismiss="modal" data-bind="click : $root.addSale, enable : $data.IsValid">Create</button>
                        <button type="button" id="btnUpdate" class="btn btn-success" data-dismiss="modal" data-bind="click : $root.updateSale, enable : $data.IsValid">Update</button>
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </div>
        </fieldset>
    </div>


    <div class="modal fade" data-keyboard="false" data-backdrop="static" id="deleteModal">
        <div class="modal-dialog" data-bind="with : selectedSaleDelete">
            <div class="modal-content">
                <div class="modal-header">
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                    <h4>Delete Sale</h4>
                </div>
                <div class="modal-body">
                    <h4>
                        Are you sure you want to delete this Sale?
                    </h4>
                    Sale Id: <strong data-bind="text: Id"></strong><br />
                    Customer: <strong data-bind="text: Customer"></strong><br />
                    Product: <strong data-bind="text: Product"></strong><br />
                    Store: <strong data-bind="text: Store"></strong><br />
                    Date (YYYY/MM/DD): <strong data-bind="text: DateSold"></strong>

                </div>
                <div class="modal-footer">
                    <button type="button" id="btnDelete" class="btn btn-danger" data-dismiss="modal" data-bind="click : $root.deleteSale">Confirm</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
                </div>

            </div>

        </div>

    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/knockout-3.4.2.js"></script>
    <script src="~/Scripts/knockout.validation.min.js"></script>
    <script src="~/Scripts/knockout.mapping-latest.js"></script>
    @*<script src="~/Scripts/moment.js"></script>*@
    <script src="~/Scripts/sale.js"></script>
</body>
</html>
