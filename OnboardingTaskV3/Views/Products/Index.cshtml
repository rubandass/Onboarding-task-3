<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Product</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <br />
        <a href="#" class="btn btn-info" data-bind="click: addProductModal">Add New Product</a>
        <br />
        <br />

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody data-bind="foreach: products">
                <tr>
                    <td data-bind="text: Name"></td>
                    <td data-bind="text: Price"></td>
                    <td>
                        <a href="#" class="btn btn-warning" data-bind="click: $root.editProductModal"><span class="glyphicon glyphicon-edit"></span> Edit</a>
                    </td>
                    <td>
                        <a href="#" class="btn btn-danger" data-bind="click: $root.deleteProductModal"><span class="glyphicon glyphicon-trash"></span> Delete</a>
                    </td>
                </tr>
            </tbody>
        </table>


        <div class="modal fade" data-keyboard="false" data-backdrop="static" id="productModal">
            <div class="modal-dialog" data-bind="with : selectedProduct">
                <div class="modal-content">
                    <div class="modal-header">
                        <a href="#" class="close" data-dismiss="modal">&times;</a>
                        <h4 id="modalTitle"></h4>
                    </div>
                    <div class="modal-body">
                        <form class="form-group">
                            <div class="form-group">
                                <input class="form-control" type="text" data-bind="value : Id ,visible : hideId" />
                                <label>Name</label>
                                <input class="form-control" type="text" data-bind="value : Name, valueUpdate : 'afterkeydown'" />
                            </div>
                            <div class="form-group">
                                <label>Price</label>
                                <input type="text" class="form-control" data-bind="value : Price, valueUpdate : 'afterkeydown'" />
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" id="btnAdd" class="btn btn-success" data-dismiss="modal" data-bind="click : $root.addProduct, enable : IsValid">Create</button>
                        <button type="button" id="btnUpdate" class="btn btn-success" data-dismiss="modal" data-bind="click : $root.updateProduct, enable : IsValid">Update</button>
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" data-keyboard="false" data-backdrop="static" id="deleteModal">
        <div class="modal-dialog" data-bind="with : selectedProductDelete">
            <div class="modal-content">
                <div class="modal-header">
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                    <h4>Delete Product</h4>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this Product: <strong data-bind="text: Name"></strong> ?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" id="btnDelete" class="btn btn-danger" data-dismiss="modal" data-bind="click : $root.deleteProduct">Confirm</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
                </div>

            </div>

        </div>

    </div>
    @*Create A PopUp Modal For DeleteConfirmation for foreign key constraint*@

    <div class="modal fade" data-keyboard="false" data-backdrop="static" id="DeleteConfirmationForeignKey">
        <div class="modal-dialog" data-bind="with : selectedProductDelete">
            <div class="modal-content">
                <div class="modal-header">
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                    <h4>Delete Product</h4>
                </div>
                <div class="modal-body">
                    <p>
                        <h4>The product has reference in Sales page.</h4>
                        <br />Are you sure you want to delete the product including all the references in Sales page?
                    </p>
                </div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-danger" data-dismiss="modal" data-bind="click : $root.deleteProductReference">Confirm</a>
                    <a href="#" class="btn btn-primary" data-dismiss="modal">Cancel</a>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @*<script src="~/Scripts/jquery-1.10.2.intellisense.js"></script>*@
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/knockout-3.4.2.js"></script>
    <script src="~/Scripts/knockout.validation.min.js"></script>
    <script src="~/Scripts/knockout.mapping-latest.js"></script>
    <script src="~/Scripts/product.js"></script>
</body>
</html>
